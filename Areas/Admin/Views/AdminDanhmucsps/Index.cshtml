@using PagedList.Core.Mvc 
@model PagedList.Core.IPagedList<doan.Models.Danhmucsp>
@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách danh mục" + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>

            <span class="breadcrumb-item active">Danh sách danh mục : trang @CurrentPage </span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">

        @*<div class="row">
            <div class="col-md-6">
                <div class="input-affix m-v-10">
                    <i class="prefix-icon anticon anticon-search opacity-04"></i>
                    <input id="keyword" name="keyword" type="text" class="form-control" placeholder="Tìm kiếm sản phẩm" />
                </div>

            </div>
            <div class="col-md-6">
                <div class="input-affix m-v-10">
                    <select id="madanhmuc" name="madanhmuc" class="custom-select" style="min-width: 200px;" asp-items="ViewBag.Danhmuc">
                        <option selected>Chọn danh mục sản phẩm</option>
                        <option value="all">Chọn tất cả</option>
                    </select>
                </div>

            </div>

        </div>*@
        <div class="row m-b-30">
            <div class="col-md-8">
            </div>

            <div class="col-lg-4 text-right">
                <a class="btn btn-primary" asp-controller="AdminDanhmucsps" asp-action="Create"><i class="anticon anticon-plus-circle m-r-5"></i><span>Thêm danh mục</span></a>

            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>

                        <th>ID</th>
                        <th>Tên danh mục</th>
                        <th>Mô tả</th>

                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)

                    {
                        foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @item.MaDanhMuc
                                </td>
                                <td>
                                    @item.TenDanhMuc
                                </td>
                                <td>@item.MoTa</td>




                                <td>
                                    <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminDanhmucsps" asp-action="Details" asp-route-id="@item.MaDanhMuc">Chi tiết</a>
                                    <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminDanhmucsps" asp-action="Edit" asp-route-id="@item.MaDanhMuc">Sửa</a>
                                    <a class="btn btn-success btn-tone m-r-5" asp-area="Admin" asp-controller="AdminDanhmucsps" asp-action="Delete" asp-route-id="@item.MaDanhMuc">Xóa</a>


                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
            <div aria-label="Page navigation example">
                <ul class="pagination">
                    <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminDanhmucsps" asp-action="Index" />
                </ul>
            </div>
        </div>
    </div>
</div>