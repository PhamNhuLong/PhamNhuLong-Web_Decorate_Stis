@model doan.Models.Voucher 

@{
    ViewData["Title"] = "Chỉnh sửa thông tin khuyến mãi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">

    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminVouchers" asp-action="Index">Danh sách khuyến mãi</a>
            <span class="breadcrumb-item active">Chỉnh sửa thông tin khuyến mãi</span>
        </nav>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaVoucher" />
            <div class="form-group">
                <label asp-for="TenVoucher" class="control-label">Tên khuyến mãi</label>
                <input asp-for="TenVoucher" class="form-control" />
                <span asp-validation-for="TenVoucher" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TiLeGiamGia" class="control-label">Tỉ lệ giảm giá</label>
                <input asp-for="TiLeGiamGia" class="form-control" />
                <span asp-validation-for="TiLeGiamGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayBatDau" class="control-label">Ngày bắt đầu</label>
                <input asp-for="NgayBatDau" class="form-control" />
                <span asp-validation-for="NgayBatDau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayKetThuc" class="control-label">Ngày kết thúc</label>
                <input asp-for="NgayKetThuc" class="form-control" />
                <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
