@section Scripts{
    <script>
        $(document).ready(function () {


            $("#giasanpham").keyup(function () {
                var strkeyword = $('#giasanpham').val();
                $.ajax({
                    url: '/Searchtheogia/Searchgia/',
                    datatype: "json",
                    type: "POST",
                    data: { giasanpham: strkeyword },
                    async: true,
                    success: function (results) {
                        $("#gia1").html("");
                        $("#gia1").html(results);

                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
            });
        });
    </script>
}